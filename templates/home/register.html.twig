{% extends 'base.html.twig' %}

{% block title %}Forum : Inscription{% endblock %}

{% block body %}


<div class="text-center mx-auto" style="width: 400px">

<h2>Inscription</h2>

    <div class="mt-5">

    {{ form_start(formRegister) }}

    {{ form_row(formRegister.pseudo, {label: 'Pseudo' }) }}

    {{ form_row(formRegister.password, {label: 'Mot de passe' }) }}

    {{ form_row(formRegister.confirm_password, {label: 'Confirmation du mot de passe' }) }}

    {{ form_row(formRegister.description) }}


    <button type="submit" class="btn btn-success mt-5">S'inscrire</button>

    {{ form_end(formRegister) }}

    </div>

</div>

{% endblock %}
